version: "2.0"
services:
  influxdb:
    image: hypriot/rpi-influxdb:1.1.1
    volumes:
      - ~/mnt/Data/influxdb/data:/data
    ports:
      - "8086:8086"
    environment:
      ADMIN_USER: admin
      INFLUXDB_INIT_PWD: superpassword
      PRE_CREATE_DB: telegraf
  grafana:
    image: dilgerm/rpi-grafana:2.6.0
    ports:
      - "3000:3000"
    volumes:
      - ~/mnt/Data/grafana/data:/grafana/data
      - ~/mnt/Data/grafana/config:/grafana/config
    links:
      - influxdb


